{
  "manifest_version": 3,
  "name": "TIHNT",
  "version": "0.0.0.0",
  "version_name": "github.com/sawyershoemaker/tihnt",
  "description": "Tile Information & Hidden Node Toolkit",
  "icons": {
    "16": "tihnt-16.png",
    "32": "tihnt-32.png",
    "48": "tihnt-48.png",
    "128": "tihnt-128.png",
    "256": "tihnt-256.png"
  },
  "action": {
    "default_title": "TIHNT",
    "default_icon": {
      "16": "tihnt-16.png",
      "32": "tihnt-32.png",
      "48": "tihnt-48.png",
      "128": "tihnt-128.png"
    }
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["*://*.minesweeper.online/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.minesweeper.online/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-logging": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Toggle debug logging"
    },
    "force-resend-board": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Force resend full board from the current tab"
    }
  }
}


